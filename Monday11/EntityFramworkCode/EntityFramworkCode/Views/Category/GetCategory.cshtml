@model IEnumerable<EntityFramworkCode.Models.Category>

@{
    ViewData["Title"] = "GetCategory";
}

<h1>GetCategory</h1>

<p>
    <a asp-action="AddCategory">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isActive)
            </td>
            <td>
                <a asp-action="UpdateCategory" asp-route-id="@item.CategoryId">Edit</a> |

                <a asp-action="DeleteCategoryById" asp-route-id="@item.CategoryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div class="pagination">
    @if (ViewBag.currentpage > 1)
    {
        <a asp-action="GetCategory" asp-route-page="@(ViewBag.currentpage - 1) ">Previous</a>
    }

    @for (int i = 1; i <= ViewBag.totalpages; i++)
    {
        if (i == ViewBag.currentpage)
        {
            <strong>@i</strong>
        }
        else
        {
            <a asp-action="GetCategory" asp-route-page="@i">@i</a>
        }
    }

    @if (ViewBag.currentpage < ViewBag.totalpages)
    {
        <a asp-action="GetCategory" asp-route-page="@(ViewBag.currentpage + 1) ">Next</a>
    }
</div>