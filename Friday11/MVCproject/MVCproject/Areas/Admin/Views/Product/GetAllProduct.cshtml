@model List<Product>
@if (TempData["success"] != null)
{
	<h2>@TempData["success"]</h2>
}
<div class="row">
	<div class="col-6">
		<h2>Product List</h2>
	</div>
	<div class="col-6">
		<a asp-controller="Product" asp-action="Create" class="btn btn-primary">
			<i class="bi bi-plus-circle"></i>Create Product
		</a>
	</div>
</div>

<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>Title</th>
			<th>Description</th>
			<th>ISBN</th>
			<th>Author</th>
			<th>ListProce</th>
			<th>Price 1-50</th>
			<th>Price 50+</th>
			<th>Price 100+</th>
			<th>Image</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var product in Model)
		{
			<tr>
				<td>@product.Title</td>
				<td>@product.Description</td>
				<td>@product.ISBN</td>
				<td>@product.Author</td>
				<td>@product.ListPrice</td>
				<td>@product.Price</td>
				<td>@product.Price50</td>
				<td>@product.Price100</td>
				<td>
					<img src="@product.ImageUrl" alt="@product.Title" width="100" />
				</td>
				<td>
					<div class="btn-group">
						<a asp-controller="Product" asp-action="Edit" asp-route-Id="@product.Id" class="btn btn-outline-primary btn-sm">
							<i class="bi bi-pencil-square"></i> Edit
						</a>
						<a asp-controller="Product" asp-action="Delete" asp-route-Id="@product.Id" class="btn btn-outline-danger btn-sm">
							<i class="bi bi-trash"></i> Delete
						</a>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>

@section Scripts
{
	@{
		<partial name="_ValidationScriptsPartial"></partial>
	}
}