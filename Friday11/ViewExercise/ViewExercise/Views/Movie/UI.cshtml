@model ViewExercise.ViewData.ListOfCustomer
@{
    ViewBag.title = "UI";
}

<H1>@Model.Movie.MovieName</H1>

@if (Model.Customers.Count == 0)
{
    <b>No one as watch this movie </b>
}
else
{
    <ul>
        @foreach (var customer in Model.Customers)
        {
            <li><a href="/Details/@customer.Id">@customer.CustomerName</a></li>
        }
    </ul>
    
}
